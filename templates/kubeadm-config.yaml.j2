---
apiVersion: kubeadm.k8s.io/v1beta3
kind: InitConfiguration
localAPIEndpoint:
  advertiseAddress: "{{ k8s_private_ip }}"
  bindPort: {{ k8s_api_server_port }}
nodeRegistration:
  kubeletExtraArgs:
    node-ip: "{{ k8s_private_ip }}"
---
apiVersion: kubeadm.k8s.io/v1beta3
kind: ClusterConfiguration
kubernetesVersion: "v{{ k8s_version }}"
controlPlaneEndpoint: "{{ k8s_ha_api_vip }}:{{ k8s_ha_api_port }}"
networking:
  podSubnet: "10.244.0.0/16" # Cilium default, can be overridden via helm values
apiServer:
  certSANs:
    - "{{ k8s_ha_api_vip }}"
---
apiVersion: kubelet.config.k8s.io/v1beta1
kind: KubeletConfiguration
{{ k8s_kubelet_config | to_nice_yaml(indent=2) }}
